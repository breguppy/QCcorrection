{
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "dist:win": "electron-builder -w"
  },
  "build": {
    "appId": "com.example.qccorrection",
    "files": [
      "main.js",
      {
        "from": "../scripts",
        "to": "scripts",
        "filter": [
          "start.R"
        ]
      },
      {
        "from": "../r-env",
        "to": "r-env",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3"
  }
}
